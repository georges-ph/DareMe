<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DareMe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- FAB -->
        <item name="colorPrimaryContainer">@color/red_50</item>
        <!-- Bottom Nav -->
        <item name="colorSecondaryContainer">@color/red_50</item>
        <!-- Popup menu -->
        <item name="colorSurfaceContainer">@color/red_50</item>
    </style>

    <style name="Theme.DareMe.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/red_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.DareMe</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
    </style>
</resources>