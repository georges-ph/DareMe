<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_my_challenges_list_item_user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/main_my_challenges_list_item_user_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/main_my_challenges_list_item_user_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_my_challenges_list_item_user_image"
        app:layout_constraintTop_toTopOf="@+id/main_my_challenges_list_item_user_image"
        app:layout_constraintVertical_bias="0.0"
        tools:text="username" />

    <TextView
        android:id="@+id/main_my_challenges_list_item_time_ago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_my_challenges_list_item_user_image"
        app:layout_constraintEnd_toEndOf="@+id/main_my_challenges_list_item_user_username"
        app:layout_constraintStart_toStartOf="@+id/main_my_challenges_list_item_user_username"
        app:layout_constraintTop_toBottomOf="@+id/main_my_challenges_list_item_user_username"
        tools:text="time ago" />

</androidx.constraintlayout.widget.ConstraintLayout>